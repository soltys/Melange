<?xml version="1.0" encoding="utf-8" ?>
<LexerTestPlan xmlns="http://github.com/soltys/SoltysDB/LexerTestCases.xsd">
  <TestCase name="lexer doing integer">
    <Input>42</Input>
    <ExpectedTokens>
      <Token type="Number" value="42"/>
    </ExpectedTokens>
  </TestCase>

  <TestCase name="lexer doing float">
    <Input>42.69</Input>
    <ExpectedTokens>
      <Token type="Number" value="42.69"/>
    </ExpectedTokens>
  </TestCase>

  <TestCase name="lexer doing strings">
    <Input>'foobar'</Input>
    <ExpectedTokens>
      <Token type="String" value="foobar"/>
    </ExpectedTokens>
  </TestCase>

  <TestCase name="make insert to given dictionary">
    <Input>insert foo=bar into dict</Input>
    <ExpectedTokens>
      <Token type="Insert" value="insert"/>
      <Token type="Id" value="foo"/>
      <Token type="EqualSign" value="="/>
      <Token type="Id" value="bar"/>
      <Token type="Into" value="into"/>
      <Token type="Id" value="dict"/>
    </ExpectedTokens>
  </TestCase>

  <TestCase name="Select with where">
    <Input>select * from pool where x>2+2*2</Input>
    <ExpectedTokens>
      <Token type="Select" value="select"/>
      <Token type="Star" value="*"/>
      <Token type="From" value="from"/>
      <Token type="Id" value="pool"/>
      <Token type="Where" value="where"/>
      <Token type="Id" value="x"/>
      <Token type="GreaterThan" value=">"/>
      <Token type="Number" value="2"/>
      <Token type="Plus" value="+"/>
      <Token type="Number" value="2"/>
      <Token type="Star" value="*"/>
      <Token type="Number" value="2"/>
    </ExpectedTokens>
  </TestCase>
</LexerTestPlan>